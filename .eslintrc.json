{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "serviceworker": true,
    "webextensions": true
  },
  "extends": ["eslint:recommended", "plugin:unicorn/recommended", "prettier"],
  "plugins": ["unicorn"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "consistent-return": "error",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": ["error", "unix"],
    "no-console": [
      "error",
      {
        "allow": ["error"]
      }
    ],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
