{
  "name": "freshrss-checker",
  "description": "Shows unread count for FreshRSS",
  "version": "3.0.0",
  "author": "Brawl345",
  "license": "Unlicense",
  "repository": {
    "url": "https://github.com/Brawl345/FreshRSS-Checker"
  },
  "main": "source/service-worker.js",
  "type": "module",
  "scripts": {
    "dev": "node esbuild.js",
    "start:chrome": "web-ext run -t chromium",
    "build": "cross-env NODE_ENV=\"production\" node esbuild.js && web-ext build --overwrite-dest",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "web-ext-lint": "cross-env NODE_ENV=\"production\" node esbuild.js && web-ext lint",
    "global:check-dependencies": "npm-check --skip-unused"
  },
  "webExt": {
    "sourceDir": "./public/"
  },
  "devDependencies": {
    "chrome-types": "0.1.80",
    "cross-env": "7.0.3",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-unicorn": "40.0.0",
    "esbuild": "0.14.10",
    "prettier": "2.5.1",
    "web-ext": "6.6.0"
  },
  "dependencies": {
    "md5": "2.3.0"
  }
}
