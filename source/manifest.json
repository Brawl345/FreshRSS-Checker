{
  "manifest_version": 2,
  "name": "FreshRSS Checker",
  "description": "Shows unread count for FreshRSS",
  "author": "Andreas Bielawski",
  "version": "2.0.0",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "lib/browser-polyfill.min.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "128": "icons/128.png"
    }
  },
  "options_ui": {
    "browser_style": true,
    "page": "options/options.html"
  },
  "permissions": [
    "alarms",
    "contextMenus",
    "storage"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "freshrss-checker@addons.mozilla.org",
      "strict_min_version": "80.0"
    }
  }
}