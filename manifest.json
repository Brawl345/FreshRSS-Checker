{
  "applications": {
      "gecko": {
          "id": "freshrss-checker@addons.mozilla.org"
      }
  },
  "manifest_version": 2,
  "name": "FreshRSS Checker",
  "description": "Shows unread count for FreshRSS",
  "version": "1.0.1",

  "background": {
    "scripts": ["background.js", "md5.min.js"]
  },
 
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },

  "options_ui": {
    "browser_style": true,
    "page": "options.html"
  },

  "permissions": ["alarms", "<all_urls>", "notifications", "storage", "contextMenus"]
}
