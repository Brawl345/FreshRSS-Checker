{

  "applications": {
      "gecko": {
          "id": "miniflux-checker@addons.mozilla.org"
      }
  },
  "manifest_version": 2,
  "name": "Miniflux Checker",
  "description": "Miniflux checker",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },
 
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },

  "options_ui": {
      "page": "options.html"
  },

  "permissions": ["alarms", "<all_urls>", "storage"]
}
